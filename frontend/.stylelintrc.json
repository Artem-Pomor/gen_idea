{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-tailwindcss",
		"stylelint-config-standard-scss",
		"stylelint-config-recommended"
	],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"layer",
					"theme",
					"responsive",
					"screen",
					"tailwind",
					"variants"
				]
			}
		],
		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"layer",
					"theme",
					"responsive",
					"screen",
					"tailwind",
					"variants"
				]
			}
		],
		"no-descending-specificity": null
	}
}