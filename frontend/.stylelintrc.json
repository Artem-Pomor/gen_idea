{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss",
    "stylelint-config-standard-scss",
    "stylelint-config-recommended"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "layer",
          "theme",
          "custom-variant",
          "responsive",
          "screen",
          "tailwind",
          "variants"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "layer",
          "theme",
          "responsive",
          "screen",
          "tailwind",
          "variants",
          "custom-variant"
        ]
      }
    ],
    "scss/operator-no-unspaced": null,
    "no-descending-specificity": null
  }
}
